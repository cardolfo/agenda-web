<p id="notice"><%= notice %></p>

<h1><%= t("activerecord.models.contact") %></h1>

<%= link_to t("app.new", model_name: t("activerecord.models.contact")), new_contact_path, class: "btn btn-success" %>

<br>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.contact.nome") %></th>
      <th><%= t("activerecord.attributes.contact.cellphone") %></th>
      <th><%= t("activerecord.attributes.contact.email") %></th>
      <th><%= t("activerecord.attributes.contact.address") %></th>
      <th><%= t("activerecord.attributes.contact.birthdate") %></th>
      <th colspan="3"><%=t("app.actions")%></th>
    </tr>
  </thead>

  <%= paginate @contacts %>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.nome %></td>
        <td><%= contact.cellphone %></td>
        <td><%= contact.email %></td>
        <td><%= contact.address %></td>
        <td><%= contact.birthdate %></td>
        <td><%= link_to t("app.show"), contact, class: "btn btn-primary"%></td>
        <td><%= link_to t("app.edit"), edit_contact_path(contact), class: "btn btn-info" %></td>
        <td><%= link_to t("app.destroy"), contact, class: "btn btn-danger", method: :delete, data: { confirm: t("app.messages.are_you_sure") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @contacts %>

<br>
